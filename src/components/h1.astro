---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h1
    class={clsx(
        "text-white font-['Migra'] font-extrabold text-balance",
        size === "default" && "text-5xl md:text-7xl xl:text-9xl",
        size === "large" && "text-6xl md:text-8xl lg:text-[180px]",
        className,
    )}
>
    <slot />
</h1>
