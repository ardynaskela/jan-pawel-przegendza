---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h1
    class={clsx(
        "text-white font-bold text-balance",
        size === "default" && "text-2xl md:text-4xl xl:text-6xl tracking-tight",
        size === "large" && "text-4xl md:text-[80px] lg:text-[120px] tracking-tighter",
        className,
    )}
>
    <slot />
</h1>
