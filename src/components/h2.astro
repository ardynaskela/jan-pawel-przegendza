---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h2
    class={clsx(
        "text-white font-['Migra'] font-extrabold text-balance",
        size === "default" && "text-2xl md:text-4xl xl:text-6xl",
        size === "large" && "text-4xl md:text-[80px] lg:text-[120px]",
        className,
    )}
>
    <slot />
</h2>
