---
import H1 from "../components/h1.astro";
import ExternalLink from "../components/external-link.astro";
import GrainGradientBackground from "../components/graingradient-background";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import { NAV_ITEMS } from "../lib/nav";
import "../styles/global.css";
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
import LoadingIndicator from "astro-loading-indicator/component";

const title = "Contact - Jan Paweł Przegendza";
const description = "Get in touch with Jan Paweł Przegendza";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <Font cssVariable="--font-geist" preload />
    <ClientRouter />
    <LoadingIndicator color="#f4f4f5" height="2px" />
  </head>

  <body class="font-sans min-h-screen bg-neutral-950">
    <main class="relative min-h-screen">
      <section class="px-4 sm:px-12 pb-24">
        <div class="min-h-screen grid gap-10 lg:gap-12 grid-cols-[24px_1fr] lg:grid-cols-[minmax(0,520px)_1fr] items-start">
          <!-- ANIMATED BACKGROUND STRIP (LEFT SIDE) -->
          <div class="lg:sticky lg:top-0 h-screen">
            <div class="relative w-full h-full">
              <GrainGradientBackground
                client:only="react"
                width={1280}
                height={720}
                colors={["#ffcca8", "#08062d", "#000000"]}
                colorBack="#020209"
                softness={1}
                intensity={0.69}
                noise={0.5}
                shape="ripple"
                speed={1.48}
                scale={2.36}
                offsetX={-1}
                offsetY={-0.82}
                style={{ width: "100%", height: "100%" }}
              />
            </div>
          </div>

          <!-- CONTENT (RIGHT SIDE) -->
          <div class="min-w-0 pt-4 sm:pt-8">
            <H1>Contact</H1>

            <div class="mt-6 sm:mt-12 flex flex-col gap-1">
              <a
                href="mailto:jan@przegendza.com"
                class="mb-2 w-fit group flex items-center gap-1 text-base lg:text-xl text-neutral-200 hover:text-neutral-50"
              >
                jan@przegendza.com
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <title>Arrow Icon</title>
                  <path
                    fill="currentColor"
                    d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10"
                    opacity=".5"
                  />
                  <path
                    fill="currentColor"
                    d="M13.53 8.47a.75.75 0 1 0-1.06 1.06l1.72 1.72H8a.75.75 0 0 0 0 1.5h6.19l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3a.75.75 0 0 0 0-1.06z"
                  />
                </svg>
              </a>

              <a
                href="tel:+48535530670"
                class="mb-8 w-fit group flex items-center gap-1 text-base lg:text-xl text-neutral-200 hover:text-neutral-50"
              >
                +48 535 530 670
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <title>Arrow Icon</title>
                  <path
                    fill="currentColor"
                    d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10"
                    opacity=".5"
                  />
                  <path
                    fill="currentColor"
                    d="M13.53 8.47a.75.75 0 1 0-1.06 1.06l1.72 1.72H8a.75.75 0 0 0 0 1.5h6.19l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3a.75.75 0 0 0 0-1.06z"
                  />
                </svg>
              </a>

              <ExternalLink href="https://www.youtube.com/@przegendza">YouTube</ExternalLink>
              <ExternalLink href="https://www.instagram.com/jan.przegendza/">Instagram</ExternalLink>
              <ExternalLink href="https://soundcloud.com/przegendza">SoundCloud</ExternalLink>
              <ExternalLink href="https://www.facebook.com/przegendzajan">Facebook</ExternalLink>
            </div>
          </div>
        </div>
      </section>
      
      <!-- FOOTER (FIXED AT BOTTOM) -->
      <footer class="fixed inset-x-0 bottom-0 z-40 pl-4 sm:pl-12 pr-4 py-0 md:py-4 bg-transparent md:bg-neutral-950">
        <div class="flex justify-end">
          <!-- Desktop -->
          <div class="hidden md:flex items-center gap-4 flex-wrap justify-end">
            {NAV_ITEMS.map((item) => (
              <Link href={item.href} variant="secondary">
                {item.label}
              </Link>
            ))}
          </div>

          <!-- Mobile -->
          <div class="md:hidden">
            <Navigation client:load items={NAV_ITEMS} />
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
