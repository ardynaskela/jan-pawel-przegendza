---
import RootLayout from "./RootLayout.astro";

const {
  imageSrc = "/workspaces/jan-pawel-przegendza/public/uploads/jan-przegendza.jpg",
  imageAlt = "Portrait",
} = Astro.props;
---

<RootLayout>
  <section class="px-4 sm:px-12 pt-4 sm:pt-8 pb-24">
    <div class="min-h-dvh grid gap-10 lg:gap-12 lg:grid-cols-[minmax(0,520px)_1fr] items-start">
      <!-- PHOTO -->
      <div class="lg:sticky lg:top-8">
        <div class="overflow-hidden rounded-b-3xl lg:rounded-3xl">
          <img
            src={imageSrc}
            alt={imageAlt}
            loading="eager"
            class="
              w-full object-cover
              h-[520px] sm:h-[640px]
              lg:h-[calc(100dvh-10rem)]
            "
          />
        </div>
      </div>

      <!-- CONTENT -->
      <div class="min-w-0">
        <slot />
      </div>
    </div>
  </section>
</RootLayout>